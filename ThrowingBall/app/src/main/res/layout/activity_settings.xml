<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Settings">

    <SeekBar
        android:id="@+id/seekBar"
        android:layout_width="161dp"
        android:layout_height="40dp"
        android:layout_marginStart="108dp"
        android:layout_marginTop="157dp"
        android:layout_marginEnd="142dp"
        android:layout_marginBottom="535dp"
        android:background="@android:drawable/bottom_bar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/threshold_value"
        android:layout_width="202dp"
        android:layout_height="48dp"
        android:layout_marginStart="104dp"
        android:layout_marginTop="29dp"
        android:layout_marginEnd="105dp"
        android:layout_marginBottom="458dp"
        android:text="Threshold: "
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/seekBar"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/button_sub"
        android:layout_width="108dp"
        android:layout_height="55dp"
        android:layout_marginStart="269dp"
        android:layout_marginTop="321dp"
        android:layout_marginEnd="54dp"
        android:layout_marginBottom="88dp"
        android:text="Submitt"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/threshold_value" />
</android.support.constraint.ConstraintLayout>